html(lang="zh_tw")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title lightGIS
    body
        canvas#canvas(ondrop='handleDrop(event)' ondragover='event.preventDefault()')
        .position-fixed(style='right:0;top:0;height:100%;overflow-y:scroll;')
            table
                tr#raster(draggable='true' ondragstart='dragged=event.target' ondrop='handleDrop(event,this)' ondragover='event.preventDefault()')
                    td.pb-1.pr-1
                        span {{name}}
                    td.custom-control.custom-switch
                        input#customSwitch.custom-control-input(type='checkbox')
                        label.custom-control-label(for='customSwitch')
                    td.input-text(draggable='true' ondragstart='event.preventDefault();event.stopPropagation()')
                        input.custom-range(type='range' min='0' max='1' step='0.1' value='0.8' style='direction: rtl;')
            input#file(type='file' style='display: none' onchange='handleFiles(event.target.files)' multiple='')
            .btn.btn-outline-primary.w-100(onclick="document.getElementById('file').click()") 選取檔案或拖曳匯入
            .input-group
                .input-group-prepend
                    .btn.btn-outline-success(onclick="exportFile('geojson')") 匯出
                input#file-export.form-control.btn.btn-outline-success(type='text' name='file-export' style='width:50px')
                select#file-extension.btn.btn-outline-success(name='file-extension')
                    option(value='.geojson') .geojson
                    option(value='.png') .png
        table#properties.table.table-striped.table-hover.table-dark(style='max-width:300px;max-height:100vh;position:fixed;left:0;top:0')
        table#styles.table.table-striped.table-hover.table-dark(style='max-width:200px;position:fixed;left:0;bottom:0;margin-bottom:0;cursor:move;display:none')
            tr
                td(colspan='2')
                    .btn-group.w-100
                        .btn.btn-dark(onclick='interaction.fitExtent()') 聚焦
                        .btn.btn-dark(onclick="interaction.moveLayerTo('top')") 置頂
                        .btn.btn-dark(onclick="interaction.moveLayerTo('bottom')") 置底
            //tr
                td
                    .btn.btn-dark(onclick="interaction.simplify()") 簡化
                td
                    input#percentage(type="number" style="width:50px;" min="1" value="100")
            tr
                td radius
                td
                    input(type='number' style='width:50px;' min='1' oninput="interaction.setFeatureProps('radius',event.target.value)")
            tr
                td lineWidth
                td
                    input(type='number' style='width:50px;' min='0' oninput="interaction.setFeatureProps('lineWidth',event.target.value)")
            tr
                td stroke
                td
                    input(type='color' oninput="interaction.setFeatureProps('stroke',event.target.value)")
            tr
                td fill
                td
                    input(type='color' oninput="interaction.setFeatureProps('fill',event.target.value)")